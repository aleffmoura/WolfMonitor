                                <TextBlock Text="Data"/>
                                <TextBlock Text="Horario" Margin="80,0,0,0"/>
                                <TextBlock Text="Anterior" Margin="80,0,0,0"/>
                                <TextBlock Text="Atual" Margin="80,0,0,0"/>
                            </StackPanel>
                        </Border>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="12/12/2222" />
                            <TextBlock Text="23:59" Margin="44.4,0,0,0"/>
                            <TextBlock Text="running" Margin="90,0,0,0"/>
                            <TextBlock Text="stopped" Margin="83,0,0,0"/>
