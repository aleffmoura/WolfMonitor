                        </StackPanel>
                    </StackPanel>
                    
                </TabItem>
            </TabControl>


        </StackPanel>

        <Button x:Name="btnPrevPage" HorizontalContentAlignment="Left" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Margin="5,0" Click="btnPrevPage_Click">
            <materialDesign:PackIcon Kind="NavigateBefore"/>
        </Button>

        <Button x:Name="btnActualPage" Content="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Cursor="None" IsEnabled="False" />

        <Button x:Name="btnNextPage" HorizontalContentAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="5,0" Click="btnNextPage_Click">
            <materialDesign:PackIcon Kind="NavigateNext"/>
