<UserControl x:Class="Totten.Solutions.WolfMonitor.WpfApp.Screens.Passwords.ValidationTokenUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Totten.Solutions.WolfMonitor.WpfApp.Screens.Passwords"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
        d:DesignHeight="150" d:DesignWidth="350">
    <Grid>
        <StackPanel Margin="10" >
            <TextBox Name="txtToken" materialDesign:HintAssist.Hint="Token"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="20,40,20,0" FontSize="25" TextChanged="txtToken_TextChanged"/>
            <Label Content="Não recebeu o token?" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5" Foreground="Gray" FontSize="16" Cursor="Hand" MouseLeftButtonUp="Label_MouseLeftButtonUp"/>

        </StackPanel>
    </Grid>
</UserControl>
